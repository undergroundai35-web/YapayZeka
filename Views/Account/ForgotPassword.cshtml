
@{
    Layout = null; // Standalone layout like Login
}

<!DOCTYPE html>
<html lang="tr" class="h-full bg-[#0F172A]">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Şifremi Unuttum - Univera Connect</title>

    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <style>
        body { font-family: 'Inter', sans-serif; }
        .glass-input {
            background: rgba(30, 41, 59, 0.7);
            border: 1px solid rgba(51, 65, 85, 0.5);
            transition: all 0.3s ease;
        }
        .glass-input:focus {
            background: rgba(30, 41, 59, 1);
            border-color: #6366F1;
            box-shadow: 0 0 0 4px rgba(99, 102, 241, 0.1);
        }
    </style>
</head>
<body class="h-full flex items-center justify-center text-white overflow-hidden bg-[#0F172A] relative">
    
    <!-- Background Decor -->
    <div class="absolute inset-0 z-0">
          <div class="absolute inset-0 bg-gradient-to-br from-[#0F172A] via-[#1e1b4b] to-[#0F172A]"></div>
          <div class="absolute top-0 left-0 w-full h-full bg-[url('/images/grid.svg')] opacity-10"></div>
    </div>

    <!-- Main Card -->
    <div class="relative z-10 w-full max-w-md px-6">
        <div class="bg-slate-900/50 backdrop-blur-xl border border-white/5 rounded-3xl p-8 shadow-2xl">
            
            <div class="text-center mb-8">
                <div class="w-16 h-16 bg-indigo-500/10 rounded-2xl flex items-center justify-center mx-auto mb-6 border border-indigo-500/20">
                    <i class="bi bi-key text-3xl text-indigo-400"></i>
                </div>
                <h2 class="text-2xl font-bold text-white mb-2">Şifrenizi mi unuttunuz?</h2>
                <p class="text-sm text-slate-400">E-posta adresinizi girin, size geçici bir şifre gönderelim.</p>
            </div>

            <form method="post" action="/Account/ForgotPassword" class="space-y-6">
                @if (TempData["Mesaj"] != null)
                {
                    <div class="p-4 rounded-xl bg-indigo-500/10 border border-indigo-500/20 text-indigo-300 text-sm flex items-center gap-3">
                         <i class="bi bi-info-circle-fill"></i>
                        @TempData["Mesaj"]
                    </div>
                }

                <div>
                    <label class="block text-xs font-medium text-slate-400 uppercase tracking-wider mb-2">E-Posta Adresi</label>
                    <div class="relative">
                        <i class="bi bi-envelope absolute left-4 top-3.5 text-slate-500"></i>
                        <input type="email" name="email" required 
                               class="w-full pl-11 pr-4 py-3.5 rounded-xl glass-input text-sm text-white placeholder-slate-600 outline-none" 
                               placeholder="ornek@univera.com.tr" />
                    </div>
                </div>

                <button type="submit" 
                        class="w-full py-3.5 bg-indigo-600 hover:bg-indigo-500 text-white text-sm font-semibold rounded-xl shadow-lg shadow-indigo-500/25 transition-all duration-300 transform active:scale-[0.98] flex items-center justify-center gap-2">
                    <span>Şifre Gönder</span>
                    <i class="bi bi-send"></i>
                </button>
            </form>

            <div class="mt-8 text-center">
                <a href="/Account/Login" class="text-sm font-medium text-slate-400 hover:text-white transition-colors flex items-center justify-center gap-2">
                    <i class="bi bi-arrow-left"></i>
                    Giriş Ekranına Dön
                </a>
            </div>
        </div>
        
        <p class="text-[10px] text-center text-slate-600 mt-8 tracking-widest uppercase font-semibold">
            Univera Connect Security
        </p>
    </div>

</body>
</html>
