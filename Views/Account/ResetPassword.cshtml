@model UniCP.Models.Kullanici.Account.AccountResetPasswordModel
@{
    Layout = "_LayoutLogin";
}


    <div class="auth-container">

     
        <div class="auth-card">

            <div class="auth-header">
                <div class="auth-logo">
                    <i class="bi bi-grid-3x3-gap-fill"></i>
                    <span>Univera Müşteri Portalı</span>
                </div>

               
                <p class="auth-subtitle">Şifre Yenileme</p>
            </div>
            <div class="modal-content">
           

                <form id="registerForm" method="post" action="/Account/ResetPassword">
           
                    
                    <div class="card-body">
                  
                    <input type="hidden" asp-for="Token">
                    <input type="hidden" asp-for="Email">
                    
             

                        <!-- Password -->
                        <div class="form-group">
                            <label for="registerPassword" class="form-label">
                                <i class="bi bi-lock me-2"></i>Şifre
                            </label>
                            <input type="password" class="form-control" id="registerPassword" name="Password"
                                   placeholder="Güçlü bir şifre oluşturun" required>
                            <div class="password-strength">
                                <div class="password-strength-bar" id="passwordStrengthBar"></div>
                            </div>
                            <div class="password-strength-text" id="passwordStrengthText"></div>
                        </div>

                        <!-- Confirm Password -->
                        <div class="form-group">
                            <label for="confirmPassword" class="form-label">
                                <i class="bi bi-lock-check me-2"></i>Şifre Tekrarı
                            </label>
                            <input type="password" class="form-control" id="confirmPassword" name="ConfirmPassword"
                                   placeholder="Şifrenizi tekrar girin" required>
                        </div>

                        <!-- Terms -->
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="agreeTerms" name="agreeTerms" required>
                            <label class="form-check-label" for="agreeTerms">
                                <a href="/Terms" class="auth-link">Kullanım Koşullarını</a> ve
                                <a href="/Privacy" class="auth-link">Gizlilik Politikasını</a> kabul ediyorum
                            </label>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                        <button type="submit" class="btn btn-primary-auth" style="width: auto; margin: 0;">
                            <i class="bi bi-check-circle me-2"></i>Kaydet
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
  
