@{
    Layout = null;
    bool aiEnabled = Configuration.GetValue<bool>("Gemini:Enabled");
}
@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration

<!DOCTYPE html>
<html lang="tr" class="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Univera Connect</title>

    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            darkMode: 'class',
            theme: {
                extend: {
                    colors: {
                        slate: {
                            850: '#1e293b', // Custom lighter slate for cards
                            900: '#0f172a', // Main dark bg
                        }
                    },
                    fontFamily: {
                        sans: ['Inter', 'sans-serif'],
                    }
                }
            }
        }
    </script>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Bootstrap Icons (for legacy icon support) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <style>
        body { 
            font-family: 'Inter', sans-serif;
            background: linear-gradient(135deg, #0a0e1a 0%, #1a1f37 50%, #0f1629 100%);
            background-attachment: fixed;
        }
        
        /* Page Load Animation */
        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@keyframes slideInLeft {
            from {
                opacity: 0;
                transform: translateX(-50px);
            }
            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        @@keyframes scaleIn {
            from {
                opacity: 0;
                transform: scale(0.9);
            }
            to {
                opacity: 1;
                transform: scale(1);
            }
        }

        body {
            animation: fadeInUp 0.6s cubic-bezier(0.4, 0, 0.2, 1);
        }

        aside {
            animation: slideInLeft 0.7s cubic-bezier(0.4, 0, 0.2, 1);
        }

        main > * {
            animation: scaleIn 0.8s cubic-bezier(0.4, 0, 0.2, 1);
        }

        /* Stagger animations for cards */
        .grid > *:nth-child(1) { animation-delay: 0.1s; }
        .grid > *:nth-child(2) { animation-delay: 0.2s; }
        .grid > *:nth-child(3) { animation-delay: 0.3s; }
        .grid > *:nth-child(4) { animation-delay: 0.4s; }
        .grid > *:nth-child(5) { animation-delay: 0.5s; }
        
        /* Enhanced Glassmorphism */
        .glass-panel {
            background: linear-gradient(135deg, rgba(42, 51, 78, 0.4) 0%, rgba(26, 31, 55, 0.6) 100%);
            backdrop-filter: blur(16px);
            -webkit-backdrop-filter: blur(16px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            animation: scaleIn 0.6s cubic-bezier(0.4, 0, 0.2, 1) backwards;
        }

        .glass-panel:hover {
            background: linear-gradient(135deg, rgba(52, 61, 88, 0.5) 0%, rgba(36, 41, 65, 0.7) 100%);
            border-color: rgba(255, 255, 255, 0.15);
            transform: translateY(-4px) scale(1.02);
            box-shadow: 0 20px 60px -15px rgba(0, 0, 0, 0.5),
                        0 0 40px -10px rgba(99, 102, 241, 0.15);
        }
        
        /* Distinct Sidebar with different gradient */
        .glass-sidebar {
            background: linear-gradient(180deg, #1e2139 0%, #252b45 50%, #1a1f37 100%);
            backdrop-filter: blur(20px);
            border-right: 1px solid rgba(255, 255, 255, 0.08);
            box-shadow: 4px 0 24px rgba(0, 0, 0, 0.3);
        }

        /* Interactive card effects */
        .interactive-card {
            cursor: pointer;
            position: relative;
            overflow: hidden;
        }

        .interactive-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.05), transparent);
            transition: left 0.5s;
        }

        .interactive-card:hover::before {
            left: 100%;
        }

        /* Glow effects */
        .glow-red { box-shadow: 0 0 30px rgba(239, 68, 68, 0.4); }
        .glow-blue { box-shadow: 0 0 30px rgba(59, 130, 246, 0.4); }
        .glow-emerald { box-shadow: 0 0 30px rgba(16, 185, 129, 0.4); }
        .glow-amber { box-shadow: 0 0 30px rgba(245, 158, 11, 0.4); }
        .glow-purple { box-shadow: 0 0 30px rgba(168, 85, 247, 0.4); }

        /* Enhanced Scrollbar */
        ::-webkit-scrollbar {
            width: 8px;
            height: 8px;
        }
        ::-webkit-scrollbar-track {
            background: rgba(15, 23, 42, 0.5);
            border-radius: 10px;
        }
        ::-webkit-scrollbar-thumb {
            background: linear-gradient(180deg, #4f46e5 0%, #6366f1 100%);
            border-radius: 10px;
            border: 2px solid rgba(15, 23, 42, 0.5);
        }
        ::-webkit-scrollbar-thumb:hover {
            background: linear-gradient(180deg, #6366f1 0%, #818cf8 100%);
        }

        /* Pulse animation for live indicators */
        @@keyframes pulse-glow {
            0%, 100% {
                opacity: 1;
                box-shadow: 0 0 10px currentColor;
            }
            50% {
                opacity: 0.7;
                box-shadow: 0 0 20px currentColor;
            }
        }

        .pulse-glow {
            animation: pulse-glow 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
        }

        /* Shimmer animation for progress bars */
        @@keyframes shimmer {
            0% {
                transform: translateX(-100%);
            }
            100% {
                transform: translateX(100%);
            }
        }

        .animate-shimmer {
            animation: shimmer 2s ease-in-out infinite;
        }
    </style>
</head>
