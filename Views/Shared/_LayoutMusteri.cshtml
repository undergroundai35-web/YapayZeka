    <!-- Scripts for AI Chat -->
    <script>
        const chatWindow = document.getElementById('ai-chat-window');
        const chatMessages = document.getElementById('chat-messages');
        const chatInput = document.getElementById('chat-input');
        const sendBtn = document.getElementById('send-btn');
        const floatBtn = document.getElementById('ai-float-btn');
        const userMenu = document.getElementById('user-menu-popover');
        let isChatOpen = false;

        function toggleUserMenu() {
            if (userMenu) {
                userMenu.classList.toggle('hidden');
            }
        }

        // Close menu when clicking outside
        document.addEventListener('click', function(event) {
            const profileDiv = document.querySelector('[onclick="toggleUserMenu()"]');
            if (userMenu && !userMenu.classList.contains('hidden')) {
                if (!userMenu.contains(event.target) && !profileDiv.contains(event.target)) {
                    userMenu.classList.add('hidden');
                }
            }
        });

        function toggleAiVisibility(enabled) {
            sessionStorage.setItem('uniCore_enabled', enabled);
            if (!floatBtn) return;

            if (enabled) {
                floatBtn.classList.remove('hidden');
            } else {
                floatBtn.classList.add('hidden');
                // Also close chat if it's open
                if (isChatOpen) {
                    toggleChat(); 
                }
            }
        }

        function toggleChat() {
            if (!chatWindow) return;
            
            // Rewrite visibility logic: Always show button once activated
            if (floatBtn && floatBtn.classList.contains('hidden')) {
                floatBtn.classList.remove('hidden');
            }

            isChatOpen = !isChatOpen;
            sessionStorage.setItem('uniCore_chatOpen', isChatOpen);

            if (isChatOpen) {
                chatWindow.classList.remove('hidden');
                // Small delay to allow display:block to apply before opacity transition
                setTimeout(() => {
                    chatWindow.classList.remove('opacity-0', 'scale-95', 'translate-y-4');
                    chatInput.focus();
                }, 10);
            } else {
                chatWindow.classList.add('opacity-0', 'scale-95', 'translate-y-4');
                setTimeout(() => {
                    chatWindow.classList.add('hidden');
                }, 300);
            }
        }

        async function sendMessage(e) {
            e.preventDefault();
            const message = chatInput.value.trim();
            if (!message) return;

            // Add User Message
            appendMessage('user', message);
            chatInput.value = '';
            setLoading(true);

            try {
                const response = await fetch('/AI/Chat', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ message: message })
                });

                if (!response.ok) throw new Error('Network response was not ok');
                
                const data = await response.json();
                
                // Add Bot Response
                appendMessage('bot', data.text);

                // Execute Action if present
                if (data.action) {
                    executeAction(data.action, data.payload);
                }

            } catch (error) {
                console.error('Error:', error);
                appendMessage('bot', 'Üzgünüm, bir bağlantı hatası oluştu. Lütfen tekrar deneyin.');
            } finally {
                setLoading(false);
            }
        }

        function appendMessage(sender, text) {
            const isUser = sender === 'user';
            
            const messageDiv = document.createElement('div');
            messageDiv.className = `flex gap-3 ${isUser ? 'flex-row-reverse' : ''} animate-in fade-in slide-in-from-bottom-2 duration-300`;
            
            const avatar = isUser 
                ? `<div class="w-8 h-8 rounded-full bg-indigo-600 flex items-center justify-center flex-shrink-0 text-sm text-white shadow-lg shadow-indigo-500/20">
                     <i class="bi bi-person-fill"></i>
                   </div>`
                : `<div class="w-8 h-8 rounded-full bg-indigo-500/20 text-indigo-400 flex items-center justify-center flex-shrink-0 text-sm border border-indigo-500/30">
                     <i class="bi bi-robot"></i>
                   </div>`;

            const bubbleClass = isUser 
                ? 'bg-indigo-600 text-white rounded-2xl rounded-tr-none shadow-lg shadow-indigo-500/10' 
                : 'bg-slate-800/80 border border-slate-700/50 text-slate-300 rounded-2xl rounded-tl-none shadow-sm';

            messageDiv.innerHTML = `
                ${avatar}
                <div class="${bubbleClass} p-3 text-sm max-w-[85%] leading-relaxed">
                    <p>${text}</p>
                </div>
            `;

            chatMessages.appendChild(messageDiv);
            scrollToBottom();
        }

        function setLoading(isLoading) {
            sendBtn.disabled = isLoading;
            if (isLoading) {
                const loadingDiv = document.createElement('div');
                loadingDiv.id = 'chat-loading';
                loadingDiv.className = 'flex gap-3 animate-in fade-in slide-in-from-bottom-2 duration-300';
                loadingDiv.innerHTML = `
                    <div class="w-8 h-8 rounded-full bg-indigo-500/20 text-indigo-400 flex items-center justify-center flex-shrink-0 text-sm border border-indigo-500/30">
                        <i class="bi bi-robot"></i>
                    </div>
                    <div class="bg-slate-800/80 border border-slate-700/50 p-4 rounded-2xl rounded-tl-none text-slate-400 shadow-sm">
                        <div class="flex space-x-1">
                            <div class="w-2 h-2 bg-slate-500 rounded-full animate-bounce" style="animation-delay: 0s"></div>
                            <div class="w-2 h-2 bg-slate-500 rounded-full animate-bounce" style="animation-delay: 0.2s"></div>
                            <div class="w-2 h-2 bg-slate-500 rounded-full animate-bounce" style="animation-delay: 0.4s"></div>
                        </div>
                    </div>
                `;
                chatMessages.appendChild(loadingDiv);
                scrollToBottom();
            } else {
                const loadingDiv = document.getElementById('chat-loading');
                if (loadingDiv) loadingDiv.remove();
                chatInput.focus();
            }
        }

        function scrollToBottom() {
            chatMessages.scrollTop = chatMessages.scrollHeight;
        }



        function executeAction(action, payload) {
            console.log(`Executing Action: ${action} -> ${payload}`);
            
            if (action === 'navigate') {
                setTimeout(() => {
                    window.location.href = payload;
                }, 1000);
            } else if (action === 'download') {
                setTimeout(() => {
                    const link = document.createElement('a');
                    link.href = payload;
                    // If the payload doesn't imply a download, we might want to target _blank
                    // But for DownloadStatement it returns a file attachment
                    document.body.appendChild(link);
                    link.click();
                    document.body.removeChild(link);
                }, 1000);
            }
        }

        // Restore State on Load
        document.addEventListener("DOMContentLoaded", function() {
            const storedEnabled = sessionStorage.getItem('uniCore_enabled');
            const storedChatOpen = sessionStorage.getItem('uniCore_chatOpen');
            
            // Only restore if previously set (not null)
            if (storedEnabled !== null) {
                const isEnabled = storedEnabled === 'true';
                const toggleSwitch = document.getElementById('ai-toggle-switch');
                if (toggleSwitch) {
                    toggleSwitch.checked = isEnabled;
                    toggleAiVisibility(isEnabled);
                }

                if (isEnabled && storedChatOpen === 'true') {
                    // Small delay to ensure float button is visible before toggling chat
                    setTimeout(() => {
                        if (!isChatOpen) toggleChat();
                    }, 100);
                }
            }
        });
    </script>

