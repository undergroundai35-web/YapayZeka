@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr" class="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UniConnect</title>

    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            darkMode: 'class',
            theme: {
                extend: {
                    colors: {
                        slate: {
                            850: '#1e293b', // Custom lighter slate for cards
                            900: '#0f172a', // Main dark bg
                        }
                    },
                    fontFamily: {
                        sans: ['Inter', 'sans-serif'],
                    }
                }
            }
        }
    </script>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Bootstrap Icons (for legacy icon support) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <style>
        body { 
            font-family: 'Inter', sans-serif;
            background: linear-gradient(135deg, #0a0e1a 0%, #1a1f37 50%, #0f1629 100%);
            background-attachment: fixed;
        }
        
        /* Page Load Animation */
        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@keyframes slideInLeft {
            from {
                opacity: 0;
                transform: translateX(-50px);
            }
            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        @@keyframes scaleIn {
            from {
                opacity: 0;
                transform: scale(0.9);
            }
            to {
                opacity: 1;
                transform: scale(1);
            }
        }

        body {
            animation: fadeInUp 0.6s cubic-bezier(0.4, 0, 0.2, 1);
        }

        aside {
            animation: slideInLeft 0.7s cubic-bezier(0.4, 0, 0.2, 1);
        }

        main > * {
            animation: scaleIn 0.8s cubic-bezier(0.4, 0, 0.2, 1);
        }

        /* Stagger animations for cards */
        .grid > *:nth-child(1) { animation-delay: 0.1s; }
        .grid > *:nth-child(2) { animation-delay: 0.2s; }
        .grid > *:nth-child(3) { animation-delay: 0.3s; }
        .grid > *:nth-child(4) { animation-delay: 0.4s; }
        .grid > *:nth-child(5) { animation-delay: 0.5s; }
        
        /* Enhanced Glassmorphism */
        .glass-panel {
            background: linear-gradient(135deg, rgba(42, 51, 78, 0.4) 0%, rgba(26, 31, 55, 0.6) 100%);
            backdrop-filter: blur(16px);
            -webkit-backdrop-filter: blur(16px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            animation: scaleIn 0.6s cubic-bezier(0.4, 0, 0.2, 1) backwards;
        }

        .glass-panel:hover {
            background: linear-gradient(135deg, rgba(52, 61, 88, 0.5) 0%, rgba(36, 41, 65, 0.7) 100%);
            border-color: rgba(255, 255, 255, 0.15);
            transform: translateY(-4px) scale(1.02);
            box-shadow: 0 20px 60px -15px rgba(0, 0, 0, 0.5),
                        0 0 40px -10px rgba(99, 102, 241, 0.15);
        }
        
        /* Distinct Sidebar with different gradient */
        .glass-sidebar {
            background: linear-gradient(180deg, #1e2139 0%, #252b45 50%, #1a1f37 100%);
            backdrop-filter: blur(20px);
            border-right: 1px solid rgba(255, 255, 255, 0.08);
            box-shadow: 4px 0 24px rgba(0, 0, 0, 0.3);
        }

        /* Interactive card effects */
        .interactive-card {
            cursor: pointer;
            position: relative;
            overflow: hidden;
        }

        .interactive-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.05), transparent);
            transition: left 0.5s;
        }

        .interactive-card:hover::before {
            left: 100%;
        }

        /* Glow effects */
        .glow-red { box-shadow: 0 0 30px rgba(239, 68, 68, 0.4); }
        .glow-blue { box-shadow: 0 0 30px rgba(59, 130, 246, 0.4); }
        .glow-emerald { box-shadow: 0 0 30px rgba(16, 185, 129, 0.4); }
        .glow-amber { box-shadow: 0 0 30px rgba(245, 158, 11, 0.4); }
        .glow-purple { box-shadow: 0 0 30px rgba(168, 85, 247, 0.4); }

        /* Enhanced Scrollbar */
        ::-webkit-scrollbar {
            width: 8px;
            height: 8px;
        }
        ::-webkit-scrollbar-track {
            background: rgba(15, 23, 42, 0.5);
            border-radius: 10px;
        }
        ::-webkit-scrollbar-thumb {
            background: linear-gradient(180deg, #4f46e5 0%, #6366f1 100%);
            border-radius: 10px;
            border: 2px solid rgba(15, 23, 42, 0.5);
        }
        ::-webkit-scrollbar-thumb:hover {
            background: linear-gradient(180deg, #6366f1 0%, #818cf8 100%);
        }

        /* Pulse animation for live indicators */
        @@keyframes pulse-glow {
            0%, 100% {
                opacity: 1;
                box-shadow: 0 0 10px currentColor;
            }
            50% {
                opacity: 0.7;
                box-shadow: 0 0 20px currentColor;
            }
        }

        .pulse-glow {
            animation: pulse-glow 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
        }

        /* Shimmer animation for progress bars */
        @@keyframes shimmer {
            0% {
                transform: translateX(-100%);
            }
            100% {
                transform: translateX(100%);
            }
        }

        .animate-shimmer {
            animation: shimmer 2s ease-in-out infinite;
        }
    </style>
</head>
<body class="bg-[#0F172A] text-slate-200 h-screen flex overflow-hidden selection:bg-indigo-500/30 selection:text-white">

    <!-- SIDEBAR -->
    <aside class="w-64 glass-sidebar flex-shrink-0 flex flex-col h-full z-50 transition-all duration-300">
        <!-- Brand -->
        <div class="h-20 flex items-center gap-3 px-6 border-b border-slate-700/50">
            <div class="w-10 h-10 rounded-xl bg-indigo-500/10 border border-indigo-500/20 flex items-center justify-center p-1.5 flex-shrink-0">
                <img src="/images/branding/logo-uniconnect-2d.png" class="w-full h-full object-contain" alt="Logo">
            </div>
            <span class="text-lg font-bold text-white tracking-tight">UniConnect</span>
        </div>

        <!-- Navigation -->
        <div class="flex-1 overflow-y-auto py-6 px-3 space-y-1">
            <a href="/Musteri/Index" class="nav-item group flex items-center px-3 py-2.5 text-sm font-medium rounded-xl transition-all duration-200 text-slate-400 hover:text-white hover:bg-white/5 @(ViewContext.RouteData.Values["controller"]?.ToString() == "Musteri" ? "bg-red-500/10 text-red-500 hover:bg-red-500/20 hover:text-red-400" : "")">
                <i class="bi bi-grid-1x2-fill mr-3 text-lg transition-colors group-hover:text-white @(ViewContext.RouteData.Values["controller"]?.ToString() == "Musteri" ? "text-red-500 group-hover:text-red-400" : "")"></i>
                Dashboard
            </a>

            <a href="/Talepler/Index" class="nav-item group flex items-center px-3 py-2.5 text-sm font-medium rounded-xl transition-all duration-200 text-slate-400 hover:text-white hover:bg-white/5 @(ViewContext.RouteData.Values["controller"]?.ToString() == "Talepler" ? "bg-red-500/10 text-red-500 hover:bg-red-500/20 hover:text-red-400" : "")">
                <i class="bi bi-kanban-fill mr-3 text-lg transition-colors group-hover:text-white @(ViewContext.RouteData.Values["controller"]?.ToString() == "Talepler" ? "text-red-500 group-hover:text-red-400" : "")"></i>
                Geliştirme Talepleri
            </a>

            <div class="h-px bg-slate-700/50 my-4 mx-3"></div>

            <a href="/N4B/Index" class="nav-item group flex items-center px-3 py-2.5 text-sm font-medium rounded-xl transition-all duration-200 text-slate-400 hover:text-white hover:bg-white/5 @(ViewContext.RouteData.Values["controller"]?.ToString() == "N4B" ? "bg-red-500/10 text-red-500 hover:bg-red-500/20 hover:text-red-400" : "")">
                <i class="bi bi-headset mr-3 text-lg transition-colors group-hover:text-white @(ViewContext.RouteData.Values["controller"]?.ToString() == "N4B" ? "text-red-500 group-hover:text-red-400" : "")"></i>
                Destek Merkezi
            </a>

            <a href="/Finans/Index" class="nav-item group flex items-center px-3 py-2.5 text-sm font-medium rounded-xl transition-all duration-200 text-slate-400 hover:text-white hover:bg-white/5 @(ViewContext.RouteData.Values["controller"]?.ToString() == "Finans" ? "bg-red-500/10 text-red-500 hover:bg-red-500/20 hover:text-red-400" : "")">
                <i class="bi bi-wallet2 mr-3 text-lg transition-colors group-hover:text-white @(ViewContext.RouteData.Values["controller"]?.ToString() == "Finans" ? "text-red-500 group-hover:text-red-400" : "")"></i>
                Finans & Fatura
            </a>

            <a href="/Academy/Index" class="nav-item group flex items-center px-3 py-2.5 text-sm font-medium rounded-xl transition-all duration-200 text-slate-400 hover:text-white hover:bg-white/5 @(ViewContext.RouteData.Values["controller"]?.ToString() == "Academy" ? "bg-indigo-500/10 text-indigo-500 hover:bg-indigo-500/20 hover:text-indigo-400" : "")">
                <i class="bi bi-mortarboard-fill mr-3 text-lg transition-colors group-hover:text-white @(ViewContext.RouteData.Values["controller"]?.ToString() == "Academy" ? "text-indigo-500 group-hover:text-indigo-400" : "")"></i>
                Univera Akademi
            </a>

            <a href="/SystemPerformance/Index" class="nav-item group flex items-center px-3 py-2.5 text-sm font-medium rounded-xl transition-all duration-200 text-slate-400 hover:text-white hover:bg-white/5 @(ViewContext.RouteData.Values["controller"]?.ToString() == "SystemPerformance" ? "bg-emerald-500/10 text-emerald-500 hover:bg-emerald-500/20 hover:text-emerald-400" : "")">
                <i class="bi bi-activity mr-3 text-lg transition-colors group-hover:text-white @(ViewContext.RouteData.Values["controller"]?.ToString() == "SystemPerformance" ? "text-emerald-500 group-hover:text-emerald-400" : "")"></i>
                Sistem Performansı
            </a>

            <a href="/Lisanslar/Index" class="nav-item group flex items-center px-3 py-2.5 text-sm font-medium rounded-xl transition-all duration-200 text-slate-400 hover:text-white hover:bg-white/5 @(ViewContext.RouteData.Values["controller"]?.ToString() == "Lisanslar" ? "bg-red-500/10 text-red-500 hover:bg-red-500/20 hover:text-red-400" : "")">
                <i class="bi bi-key-fill mr-3 text-lg transition-colors group-hover:text-white @(ViewContext.RouteData.Values["controller"]?.ToString() == "Lisanslar" ? "text-red-500 group-hover:text-red-400" : "")"></i>
                Lisanslarım
            </a>
        </div>

        <!-- User Profile (Bottom) -->
        <div class="p-4 border-t border-slate-700/50 bg-slate-900/50">
            <div class="flex items-center gap-3 p-2 rounded-xl hover:bg-slate-800/50 transition-colors cursor-pointer group">
                <div class="w-10 h-10 rounded-full bg-gradient-to-br from-indigo-500 to-purple-600 flex items-center justify-center text-white font-bold shadow-lg">
                    @User.Identity.Name?.Substring(0, 1).ToUpper()
                </div>
                <div class="flex-1 min-w-0">
                    <p class="text-sm font-semibold text-white truncate">@User.Identity.Name</p>
                    <p class="text-xs text-slate-400 truncate">Müşteri Yöneticisi</p>
                </div>
                <a href="/Account/LogOut" class="text-slate-500 hover:text-red-400 transition-colors p-2">
                    <i class="bi bi-box-arrow-right text-lg"></i>
                </a>
            </div>
        </div>
    </aside>

    <!-- CONTENT WRAPPER -->
    <div class="flex-1 flex flex-col min-w-0 overflow-hidden bg-[#0F172A] relative">
        <!-- Top Header (Mobile/Utility) -->
        <header class="h-20 flex items-center justify-between px-8 border-b border-slate-700/30 bg-[#0F172A]/80 backdrop-blur-md sticky top-0 z-40">
            <!-- Breadcrumb / Page Title Placeholder -->
            <div>
                <h2 class="text-xl font-semibold text-white">@ViewData["Title"]</h2>
                <p class="text-sm text-slate-500">Mevcut oturum: @DateTime.Now.ToString("dd MMMM yyyy")</p>
            </div>

            <!-- Right Actions -->
            <div class="flex items-center gap-4">
                <div class="relative">
                    <i class="bi bi-search absolute left-3 top-1/2 -translate-y-1/2 text-slate-500"></i>
                    <input type="text" placeholder="Ara..." class="bg-slate-800/50 border border-slate-700 text-sm rounded-xl pl-10 pr-4 py-2.5 text-white placeholder-slate-500 focus:outline-none focus:border-indigo-500/50 focus:ring-1 focus:ring-indigo-500/50 w-64 transition-all" />
                </div>
                
                <button class="w-10 h-10 rounded-xl bg-slate-800/50 border border-slate-700/50 flex items-center justify-center text-slate-400 hover:text-white hover:bg-slate-700/50 transition-all relative">
                    <i class="bi bi-bell"></i>
                    <span class="absolute top-2 right-2.5 w-2 h-2 rounded-full bg-red-500 border-2 border-[#0F172A]"></span>
                </button>
            </div>
        </header>

        <!-- Main Scrollable Area -->
        <main class="flex-1 overflow-y-auto p-8 scroll-smooth">
            @RenderBody()
        </main>
    </div>

    <!-- Bootstrap Bundle (Optional fallback for some components) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
