@model List<UniCP.Models.MsK.SpModels.SSP_N4B_TICKETLARI>
@{
    ViewData["Title"] = "Destek Merkezi Raporları";
    Layout = "~/Views/Shared/_LayoutMusteri.cshtml";

    var currentPeriod = ViewBag.CurrentPeriod as string;
    var startDate = ViewBag.StartDate as string;
    var endDate = ViewBag.EndDate as string;
    var labelsJson = System.Text.Json.JsonSerializer.Serialize(ViewBag.ChartLabels);
    var dataJson = System.Text.Json.JsonSerializer.Serialize(ViewBag.ChartData);
}

<div class="space-y-6 animate-in fade-in slide-in-from-bottom-4 duration-500">
    <!-- Header & Filters -->
    <div class="flex flex-col xl:flex-row xl:items-center justify-between gap-4">
        <div class="flex items-center gap-4">
            <a href="/Raporlar/Index" class="w-10 h-10 rounded-xl bg-slate-800 border border-slate-700 flex items-center justify-center text-slate-400 hover:text-white hover:bg-slate-700 transition-colors">
                <i class="bi bi-arrow-left"></i>
            </a>
            <div>
                <h1 class="text-2xl font-bold text-white tracking-tight">Destek Merkezi Raporları</h1>
                <p class="text-slate-400 mt-1">Destek taleplerinizin durum analizi.</p>
            </div>
        </div>

        <div class="flex items-center gap-2">
        <div class="flex items-center gap-2 relative" x-data="{ open: false }">
            <button @@click="open = !open" @@click.away="open = false" class="inline-flex items-center gap-2 px-4 py-2 rounded-xl bg-indigo-500 text-white hover:bg-indigo-600 transition-all font-medium shadow-lg shadow-indigo-500/25">
                <i class="bi bi-lightning-charge-fill"></i>
                <span>İşlemler</span>
                <i class="bi bi-chevron-down text-xs ml-1" :class="{ 'rotate-180': open }"></i>
            </button>

            <!-- Dropdown Menu -->
            <div x-show="open" 
                 x-transition:enter="transition ease-out duration-100"
                 x-transition:enter-start="opacity-0 scale-95"
                 x-transition:enter-end="opacity-100 scale-100"
                 x-transition:leave="transition ease-in duration-75"
                 x-transition:leave-start="opacity-100 scale-100"
                 x-transition:leave-end="opacity-0 scale-95"
                 class="absolute top-full right-0 mt-2 w-56 rounded-xl bg-slate-800 border border-slate-700 shadow-xl overflow-hidden z-50">
                
                <a href="@Url.Action("ExportDestekExcel", new { period = currentPeriod, baslangic = startDate, bitis = endDate })" class="flex items-center gap-3 px-4 py-3 text-slate-300 hover:bg-slate-700/50 hover:text-white transition-colors group">
                    <div class="w-8 h-8 rounded-lg bg-green-500/10 flex items-center justify-center text-green-400 group-hover:bg-green-500 group-hover:text-white transition-colors">
                        <i class="bi bi-file-earmark-excel"></i>
                    </div>
                    <div class="flex flex-col">
                        <span class="text-sm font-medium">Excel İndir</span>
                        <span class="text-[10px] text-slate-500 group-hover:text-slate-400">Raporu indir</span>
                    </div>
                </a>

                <div class="h-px bg-slate-700/50 my-1"></div>

                <a href="javascript:void(0)" onclick="openEmailModal()" class="flex items-center gap-3 px-4 py-3 text-slate-300 hover:bg-slate-700/50 hover:text-white transition-colors group">
                    <div class="w-8 h-8 rounded-lg bg-blue-500/10 flex items-center justify-center text-blue-400 group-hover:bg-blue-500 group-hover:text-white transition-colors">
                        <i class="bi bi-envelope"></i>
                    </div>
                    <div class="flex flex-col">
                        <span class="text-sm font-medium">Raporu Mail Gönder</span>
                        <span class="text-[10px] text-slate-500 group-hover:text-slate-400">PDF/Excel olarak gönder</span>
                    </div>
                </a>
            </div>
        </div>
        </div>
        
        <!-- Filters Container -->
        <div class="flex flex-col md:flex-row items-center gap-3">
             <!-- Preset Filters -->
             <div class="flex items-center bg-slate-800 p-1 rounded-xl border border-slate-700">
                <a href="?period=1m@(ViewBag.Status != null ? "&status=" + ViewBag.Status : "")" class="px-3 py-1.5 rounded-lg text-xs font-medium whitespace-nowrap transition-all @(currentPeriod == "1m" ? "bg-indigo-500 text-white shadow-lg shadow-indigo-500/25" : "text-slate-400 hover:text-white hover:bg-white/5")">1 Ay</a>
                <a href="?period=3m@(ViewBag.Status != null ? "&status=" + ViewBag.Status : "")" class="px-3 py-1.5 rounded-lg text-xs font-medium whitespace-nowrap transition-all @(currentPeriod == "3m" ? "bg-indigo-500 text-white shadow-lg shadow-indigo-500/25" : "text-slate-400 hover:text-white hover:bg-white/5")">3 Ay</a>
                <a href="?period=1y@(ViewBag.Status != null ? "&status=" + ViewBag.Status : "")" class="px-3 py-1.5 rounded-lg text-xs font-medium whitespace-nowrap transition-all @(currentPeriod == "1y" ? "bg-indigo-500 text-white shadow-lg shadow-indigo-500/25" : "text-slate-400 hover:text-white hover:bg-white/5")">1 Yıl</a>
            </div>

            <!-- Custom Date & Status Filter -->
            <form method="get" action="/Raporlar/Destek" class="flex items-center gap-2 bg-slate-800 p-1 rounded-xl border border-slate-700 pl-3">
                <input type="hidden" name="period" value="@currentPeriod" />
                
                <!-- Status Filter -->
                 <div class="relative">
                    <select name="status" onchange="this.form.submit()" class="appearance-none bg-slate-900 border border-slate-700 rounded-lg pl-3 pr-8 py-1.5 text-xs text-white focus:outline-none focus:border-indigo-500 cursor-pointer">
                        <option value="">Tüm Durumlar</option>
                        @if (ViewBag.AllStatuses != null)
                        {
                            foreach (var s in (List<string>)ViewBag.AllStatuses)
                            {
                                if (s == (string)ViewBag.Status)
                                {
                                    <option value="@s" selected>@s</option>
                                }
                                else
                                {
                                    <option value="@s">@s</option>
                                }
                            }
                        }
                    </select>
                    <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-slate-500">
                        <i class="bi bi-chevron-down text-[10px]"></i>
                    </div>
                </div>

                <div class="w-px h-4 bg-slate-700 mx-1"></div>
                
                <div class="flex items-center gap-2">
                    <input type="date" name="baslangic" value="@startDate" class="bg-slate-900 border border-slate-700 rounded-lg px-2 py-1.5 text-xs text-white focus:outline-none focus:border-indigo-500" />
                    <span class="text-slate-500 text-xs">-</span>
                    <input type="date" name="bitis" value="@endDate" class="bg-slate-900 border border-slate-700 rounded-lg px-2 py-1.5 text-xs text-white focus:outline-none focus:border-indigo-500" />
                </div>
                
                <button type="submit" onclick="this.form.querySelector('input[name=period]').value='custom'" class="p-2 rounded-lg bg-indigo-500/10 text-indigo-400 hover:bg-indigo-500 hover:text-white transition-colors border border-indigo-500/20">
                    <i class="bi bi-funnel-fill text-sm"></i>
                </button>
            </form>
        </div>
    </div>

    <!-- Chart Section -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
        <!-- Stats Card -->
        <div class="md:col-span-1 bg-slate-800 border border-slate-700 rounded-2xl p-6 flex flex-col justify-center">
            <h3 class="text-slate-400 text-sm font-medium mb-2">Toplam Talep</h3>
            <p class="text-4xl font-bold text-white">@Model.Count</p>
            <div class="mt-4 text-xs text-slate-500">
                Seçili periyottaki toplam destek talebi
            </div>
        </div>

        <!-- Chart -->
        <div class="md:col-span-3 bg-slate-800 border border-slate-700 rounded-2xl p-6 relative min-h-[300px] flex items-center justify-center">
             <canvas id="statusChart"></canvas>
        </div>
    </div>

    <!-- Data Table -->
    <div class="bg-slate-800 border border-slate-700 rounded-2xl overflow-hidden">
        <div class="p-6 border-b border-slate-700">
            <h3 class="text-lg font-semibold text-white">Destek Talep Listesi</h3>
        </div>
        
        <div class="overflow-x-auto">
            <table class="w-full text-left border-collapse">
                <thead>
                    <tr class="border-b border-slate-700 bg-slate-900/50 text-xs uppercase text-slate-400 sticky top-0">
                        <th class="px-6 py-4 font-semibold">Bildirim No</th>
                        <th class="px-6 py-4 font-semibold">Konu</th>
                        <th class="px-6 py-4 font-semibold">Tarih</th>
                        <th class="px-6 py-4 font-semibold">Durum</th>
                        <th class="px-6 py-4 font-semibold">Kanal</th>
                        <th class="px-6 py-4 font-semibold">SLA (Saat)</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-700/50">
                    @if (Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr class="hover:bg-slate-700/30 transition-colors group">
                                <td class="px-6 py-4 text-slate-300 font-medium font-mono">#@item.Bildirim_No</td>
                                <td class="px-6 py-4 text-white font-medium">@item.Bildirim_Aciklamasi</td>
                                <td class="px-6 py-4 text-slate-400 text-sm">@item.Bildirim_Tarihi.ToString("dd.MM.yyyy")</td>
                                <td class="px-6 py-4">
                                    <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-blue-500/10 text-blue-400 border border-blue-500/20">
                                        @item.Bildirim_Durumu
                                    </span>
                                </td>
                                <td class="px-6 py-4 text-slate-400 text-sm">@item.Gelis_Kanali</td>
                                <td class="px-6 py-4 text-slate-400 text-sm">
                                    @(item.SLA_YD_Cozum_Sure.HasValue ? item.SLA_YD_Cozum_Sure.Value.ToString("N2") : "-")
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                         <tr>
                            <td colspan="6" class="px-6 py-12 text-center text-slate-500">
                                <i class="bi bi-inbox text-3xl mb-3 block opacity-50"></i>
                                Bu periyotta herhangi bir destek talebi bulunamadı.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

    <!-- Email Modal -->
    <div id="emailModal" class="hidden fixed inset-0 z-50 flex items-center justify-center p-4 bg-black/50 backdrop-blur-sm transition-opacity duration-300">
        <div class="bg-slate-800 border border-slate-700 rounded-2xl w-full max-w-md p-6 shadow-2xl transform scale-95 opacity-0 transition-all duration-300" id="emailModalContent">
            <div class="flex items-center justify-between mb-4">
                <h3 class="text-lg font-semibold text-white">Raporu Mail Gönder</h3>
                <button onclick="closeEmailModal()" class="text-slate-400 hover:text-white">
                    <i class="bi bi-x-lg"></i>
                </button>
            </div>
            
            <p class="text-slate-400 text-sm mb-4">
                Destek talebi raporunu göndermek istediğiniz e-posta adresini giriniz.
            </p>

            <form id="emailForm" onsubmit="sendReport(event)">
                <div class="mb-4">
                    <label class="block text-xs font-medium text-slate-400 mb-1.5 uppercase">Alıcı E-Posta</label>
                    <input type="email" id="emailInput" class="w-full bg-slate-900 border border-slate-700 rounded-xl px-4 py-2.5 text-white focus:outline-none focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500 placeholder-slate-600 transition-colors" placeholder="ornek@univera.com.tr" required />
                </div>

                <div class="flex justify-end gap-3">
                    <button type="button" onclick="closeEmailModal()" class="px-4 py-2 rounded-xl text-slate-400 hover:text-white hover:bg-slate-700 transition-colors">Vazgeç</button>
                    <button type="submit" id="sendBtn" class="px-4 py-2 rounded-xl bg-indigo-500 text-white hover:bg-indigo-600 transition-colors flex items-center gap-2">
                        <span>Gönder</span>
                        <i class="bi bi-send"></i>
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="//unpkg.com/alpinejs" defer></script>

    <script>
        // Modal Logic
        const modal = document.getElementById('emailModal');
        const modalContent = document.getElementById('emailModalContent');
        const emailInput = document.getElementById('emailInput');

        function openEmailModal() {
            modal.classList.remove('hidden');
            setTimeout(() => {
                modalContent.classList.remove('scale-95', 'opacity-0');
                modalContent.classList.add('scale-100', 'opacity-100');
                emailInput.focus();
            }, 10);
        }

        function closeEmailModal() {
            modalContent.classList.remove('scale-100', 'opacity-100');
            modalContent.classList.add('scale-95', 'opacity-0');
            setTimeout(() => {
                modal.classList.add('hidden');
            }, 300);
        }

        // Email Sending Logic
        function sendReport(e) {
            e.preventDefault();
            const email = emailInput.value;
            if (!email) return;

            const btn = document.getElementById('sendBtn');
            const originalContent = btn.innerHTML;
            btn.innerHTML = `<span class="animate-spin mr-2"><i class="bi bi-arrow-repeat"></i></span> Gönderiliyor...`;
            btn.disabled = true;

            const period = '@currentPeriod';
            const startDate = '@startDate';
            const endDate = '@endDate';

            const formData = new FormData();
            formData.append('email', email);
            formData.append('period', period);
            formData.append('baslangic', startDate);
            formData.append('bitis', endDate);

            // Correct destination for Support Reports
            fetch('/Raporlar/SendSupportReport', {
                method: 'POST',
                body: formData
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    alert('Başarılı: ' + data.message);
                    closeEmailModal();
                    emailInput.value = '';
                } else {
                    alert('Hata: ' + data.message);
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Bir bağlantı hatası oluştu.');
            })
            .finally(() => {
                btn.innerHTML = originalContent;
                btn.disabled = false;
            });
        }
    </script>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const ctx = document.getElementById('statusChart').getContext('2d');
        const labels = @Html.Raw(labelsJson);
        const data = @Html.Raw(dataJson);

        if (data.length === 0) {
            // Handle empty data case visually if needed
        }

        new Chart(ctx, {
            type: 'doughnut',
            data: {
                labels: labels,
                datasets: [{
                    data: data,
                    backgroundColor: [
                        '#6366f1', // Indigo
                        '#ec4899', // Pink
                        '#10b981', // Emerald
                        '#f59e0b', // Amber
                        '#3b82f6', // Blue
                        '#8b5cf6',  // Violet
                        '#ef4444', // Red
                        '#14b8a6'  // Teal
                    ],
                    borderWidth: 0,
                    hoverOffset: 4
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                cutout: '70%',
                plugins: {
                    legend: {
                        position: 'right',
                        labels: {
                            color: '#94a3b8',
                            font: {
                                family: "'Inter', sans-serif",
                                size: 12
                            },
                            usePointStyle: true,
                            padding: 20
                        }
                    }
                }
            }
        });
    });
</script>
