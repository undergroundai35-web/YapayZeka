@model IEnumerable<UniCP.Models.Finans.FinansItemVm>
@{
    ViewData["Title"] = "Finansal Özet";
    Layout = "~/Views/Shared/_LayoutMusteri.cshtml";
}

<div class="space-y-6 animate-in fade-in duration-500">
    <!-- Header Section -->
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-2xl font-medium text-white tracking-tight">Finansal Özet</h1>
            <p class="text-sm text-slate-400 font-medium">Hizmet bedelleri, faturalar ve finansal durumunuzu buradan yönetin.</p>
        </div>
        <div class="flex space-x-2">
            <button class="px-4 py-2 bg-slate-800 border border-white/5 rounded-xl text-sm font-bold text-slate-300 hover:bg-slate-700 transition-all flex items-center space-x-2">
                <i class="bi bi-download"></i>
                <span>Ekstre İndir</span>
            </button>
        </div>
    </div>

    <!-- Financial Cards -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
        <div class="glass-panel bg-slate-800/50 p-6 rounded-2xl shadow-sm border border-white/5">
            <p class="text-xs font-bold text-slate-400 uppercase mb-2 tracking-widest">Onaylanan Bütçe</p>
            <h3 class="text-3xl font-medium text-white">$45.000</h3>
            <div class="mt-4 flex items-center text-[10px] text-emerald-400 font-bold">
                <i class="bi bi-graph-up-arrow me-1"></i> %12 artış (geçen aya göre)
            </div>
        </div>
        <div class="glass-panel bg-slate-800/50 p-6 rounded-2xl shadow-sm border border-white/5">
            <p class="text-xs font-bold text-slate-400 uppercase mb-2 tracking-widest">Ödeme Bekleyen</p>
            <h3 class="text-3xl font-medium text-[#DD2F42]">$12.450</h3>
            <div class="mt-4 flex items-center text-[10px] text-red-400 font-bold">
                <i class="bi bi-exclamation-circle me-1"></i> 3 adet gecikmiş fatura
            </div>
        </div>
        <div class="glass-panel bg-slate-800/50 p-6 rounded-2xl shadow-sm border border-white/5">
            <p class="text-xs font-bold text-slate-400 uppercase mb-2 tracking-widest">Gelecek Ödeme</p>
            <h3 class="text-3xl font-medium text-white">$8.200</h3>
            <div class="mt-4 flex items-center text-[10px] text-slate-400 font-bold">
                <i class="bi bi-calendar-event me-1"></i> 15 Ocak 2025
            </div>
        </div>
        <div class="glass-panel bg-slate-800/50 p-6 rounded-2xl shadow-sm border border-white/5">
            <p class="text-xs font-bold text-slate-400 uppercase mb-2 tracking-widest">Kalan Kredi (Hizmet)</p>
            <h3 class="text-3xl font-medium text-white">12 A/G</h3>
            <div class="mt-4 flex items-center text-[10px] text-blue-400 font-bold">
                <i class="bi bi-info-circle me-1"></i> Yıl sonuna kadar geçerli
            </div>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-12 gap-6">
        <!-- Hizmet Bedelleri Table (8 cols) -->
        <div class="lg:col-span-8 glass-panel bg-slate-800/50 rounded-[2rem] shadow-sm border border-white/5 overflow-hidden">
            <div class="px-6 py-4 border-b border-white/5 flex items-center justify-between">
                <h4 class="text-sm font-medium text-white uppercase tracking-widest">Hizmet Birim Bedelleri</h4>
                <span class="text-[10px] text-slate-500 font-bold italic">Univera Fiyat Listesi 2025 H1</span>
            </div>
            <div class="overflow-x-auto">
                <table class="w-full text-left">
                    <thead>
                        <tr class="bg-slate-800/50 border-b border-white/5">
                            <th class="px-6 py-3 text-[10px] font-black text-slate-400 uppercase tracking-widest">Hizmet Adı</th>
                            <th class="px-6 py-3 text-[10px] font-black text-slate-400 uppercase tracking-widest">Birim</th>
                            <th class="px-6 py-3 text-[10px] font-black text-slate-400 uppercase tracking-widest">Kategori</th>
                            <th class="px-6 py-3 text-[10px] font-black text-slate-400 uppercase tracking-widest">Açıklama</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-white/5">
                        @foreach (var item in Model)
                        {
                            <tr class="hover:bg-slate-700/50 transition-colors">
                                <td class="px-6 py-4">
                                    <span class="text-sm font-bold text-white">@item.StokAdi</span>
                                </td>
                                <td class="px-6 py-4">
                                    <span class="text-xs font-bold text-slate-400 uppercase">@item.Birim</span>
                                </td>
                                <td class="px-6 py-4">
                                    <span class="px-2 py-1 bg-blue-500/10 text-blue-400 text-[10px] font-bold rounded-lg border border-blue-500/20">@item.Kategori</span>
                                </td>
                                <td class="px-6 py-4">
                                    <p class="text-xs text-slate-500 line-clamp-1">@item.Aciklama</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Recent Invoices (4 cols) -->
        <div class="lg:col-span-4 glass-panel bg-slate-800/50 rounded-[2rem] shadow-sm border border-white/5 overflow-hidden">
            <div class="px-6 py-4 border-b border-white/5">
                <h4 class="text-sm font-medium text-white uppercase tracking-widest">Son Faturalar</h4>
            </div>
            <div class="p-4 space-y-3">
                <div class="p-4 bg-slate-800/30 rounded-2xl border border-white/5 hover:border-blue-500/50 transition-all cursor-pointer group">
                    <div class="flex items-center justify-between mb-2">
                        <span class="text-[10px] font-black text-blue-400 uppercase">FT-2024-0012</span>
                        <span class="text-[10px] text-slate-500 font-bold">12/12/2024</span>
                    </div>
                    <h5 class="text-sm font-bold text-white group-hover:text-blue-400 transition-colors">Yazılım Bakım Bedeli</h5>
                    <div class="flex items-center justify-between mt-3">
                        <span class="text-lg font-medium text-white">$4.500</span>
                        <span class="px-2 py-0.5 bg-emerald-500/10 text-emerald-400 text-[9px] font-black rounded-lg uppercase border border-emerald-500/20">Ödendi</span>
                    </div>
                </div>

                <div class="p-4 bg-slate-800/30 rounded-2xl border border-white/5 hover:border-[#DD2F42] transition-all cursor-pointer group">
                    <div class="flex items-center justify-between mb-2">
                        <span class="text-[10px] font-black text-[#DD2F42] uppercase">FT-2025-0001</span>
                        <span class="text-[10px] text-slate-500 font-bold">02/01/2025</span>
                    </div>
                    <h5 class="text-sm font-bold text-white group-hover:text-[#DD2F42] transition-colors">Geliştirme Hizmeti (Aralık)</h5>
                    <div class="flex items-center justify-between mt-3">
                        <span class="text-lg font-medium text-white">$8.200</span>
                        <span class="px-2 py-0.5 bg-red-500/10 text-red-500 text-[9px] font-black rounded-lg uppercase border border-red-500/20">Ödeme Bekliyor</span>
                    </div>
                </div>
                
                 <div class="p-4 bg-slate-800/30 rounded-2xl border border-white/5 hover:border-white/10 transition-all cursor-pointer group">
                    <div class="flex items-center justify-between mb-2">
                        <span class="text-[10px] font-black text-slate-400 uppercase hidden">FT-2025-0001</span>
                        <span class="text-[10px] text-slate-600 font-bold w-full text-center">Tümünü Gör</span>
                    </div>
                    <div class="flex items-center justify-center py-2">
                         <i class="bi bi-arrow-right-circle text-2xl text-slate-500 group-hover:text-white transition-colors"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
